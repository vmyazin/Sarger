<h1>Listing tasks</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Text</th>
    <th>Comment</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.text %></td>
        <td><%= task.comment %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, confirm: 'Are you sure?', method: :delete %></td>
        <td><h2>Tasks</h2>
          <%= render @task.subtasks %></td>
      </tr>
  <% end %>
</table>

<br />

