<% title "Manage Tasks" %>

		<div class="ui-body ui-body-a">
			<h2><%= yield :title %></h2>

  		<ul data-role="listview" data-inset="true" class="ui-listview ui-listview-inset ui-corner-all ui-shadow">

      <% @tasks.each do |task| %>
        <li>
          <h3><%= task.name %></h3>
          <p><%= task.text %></p>
          <p><%= task.comment %></p>
          <div data-role="controlgroup" data-type="horizontal">
            <%= link_to 'Show', task, "data-role" => "button", "data-icon" => "search", "data-theme" => "b" %>
            <%= link_to 'Edit', edit_task_path(task), "data-role" => "button", "data-icon" => "gear", "data-theme" => "b" %>
            <%= link_to 'Destroy', task, confirm: 'Are you sure?', method: :delete, "data-role" => "button", "data-icon" => "delete", "data-theme" => "a" %>
          </div>
        </li>
      <% end %>
      
      </ul>

		</div>
		
  <div data-role="footer" data-position="fixed" class="ui-footer ui-bar-a ui-footer-fixed slideup">
  	<div data-role="content">	
  	  <%= link_to 'New Task', new_task_path %>
      <%-#= <a href="#" data-role="button" data-icon="star" data-theme="e">Begin challenge</a>  %>
    </div>
  </div>




